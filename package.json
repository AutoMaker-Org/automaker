{
  "name": "automaker",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/electron",
    "dev:web": "npm run dev:web --workspace=apps/electron",
    "dev:electron": "npm run dev:electron --workspace=apps/electron",
    "dev:electron:debug": "npm run dev:electron:debug --workspace=apps/electron",
    "dev:electron:wsl": "npm run dev:electron:wsl --workspace=apps/electron",
    "dev:electron:wsl:gpu": "npm run dev:electron:wsl:gpu --workspace=apps/electron",
    "build": "npm run build --workspace=apps/electron",
    "build:electron": "npm run build:electron --workspace=apps/electron",
    "start": "npm run start --workspace=apps/electron",
    "lint": "npm run lint --workspace=apps/electron",
    "test": "npm run test --workspace=apps/electron",
    "test:headed": "npm run test:headed --workspace=apps/electron",
    "dev:marketing": "npm run dev --workspace=apps/marketing"
  }
}
